{
  "name": "polyphi/parser-generator",
  "description": "Generate parsers programmatically",
  "minimum-stability": "dev",
  "license": "MIT",
  "authors": [
    {
      "name": "Miguel Muscat",
      "email": "miguelmuscat93@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.2 | ^8.0",
    "ircmaxell/php-yacc": "dev-master",
    "mindplay/composer-locator": "^2.1.4@stable"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0@stable | ^9.0@stable",
    "vimeo/psalm": "^4.0@stable",
    "webmozart/path-util": "^2.3@stable",
    "slevomat/coding-standard": "^6.0@stable"
  },
  "autoload": {
    "psr-4": {
      "Polyphi\\Parsers\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Polyphi\\Parsers\\Test\\Unit\\": "tests/unit",
      "Polyphi\\Parsers\\Test\\Func\\": "tests/functional",
      "Polyphi\\Parsers\\Test\\Helpers\\": "tests/helpers"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-initial": "0.1.x-dev"
    }
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs -s --runtime-set ignore_warnings_on_exit 1",
    "psalm": "vendor/bin/psalm --show-info=true --diff"
  }
}
